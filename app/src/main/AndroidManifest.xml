<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restfulrobot.moviefan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game_activities.GameSelectionActivityOld"
            android:label="@string/game_selection_activity_label" />
        <activity
            android:name=".game_activities.GameSelectionActivity"
            android:label="@string/game_selection_activity_label" />
        <activity
            android:name=".game_activities.GuessTheMovieActivity"
            android:label="@string/guess_the_movie_label" />
        <activity
            android:name=".game_activities.GuessTheActorActivity"
            android:label="@string/guess_the_actor_label" />
        <activity
            android:name=".game_activities.GuessTheMovieActorsActivity"
            android:label="@string/guess_the_movie_actors_label" />
        <activity
            android:name=".game_activities.BlitzActivity"
            android:label="@string/guess_blitz_label" />

        <activity
            android:name=".AchievementActivity"
            android:label="@string/your_achievement_label" />


        <activity android:name=".SettingActivity"></activity>
    </application>

</manifest>