<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.restfulrobot.moviefan.game_activities.GuessTheMovieActorsFragment"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:background="@android:color/transparent"
            android:text="Фильм"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:id="@+id/movieName" />

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/movieScreens"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:id="@+id/movieScreen1"
                android:layout_height="90dp"
                android:src="@drawable/example"
                />

            <ImageView
                android:layout_width="120dp"
                android:id="@+id/movieScreen2"
                android:layout_height="90dp"
                android:src="@drawable/example"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <TextView
            android:background="@android:color/transparent"
            android:text="Актерский состав: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="18sp" />

        <GridLayout
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="3"
            android:id="@+id/gridText"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >

            <CheckBox
                android:text="Varian 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/checkVar1" />

            <CheckBox
                android:text="Varian 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:id="@+id/checkVar2" />
            <CheckBox
                android:text="Varian 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:id="@+id/checkVar3" />
            <CheckBox
                android:text="Varian 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:id="@+id/checkVar4" />
            <CheckBox
                android:text="Varian 5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:id="@+id/checkVar5" />
            <CheckBox
                android:text="Varian 6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:id="@+id/checkVar6" />
        </GridLayout>

        <GridLayout
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:id="@+id/gridActorPhotos"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="6"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/imageCheckBox1"
                    android:layout_width="80dp"
                    android:layout_height="106.6dp"
                    android:src="@drawable/example2"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBox1"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/imageCheckBox2"
                    android:layout_width="80dp"
                    android:layout_height="106.6dp"
                    android:src="@drawable/example2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBox2"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/imageCheckBox3"
                    android:layout_width="80dp"
                    android:layout_height="106.6dp"
                    android:src="@drawable/example2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBox3"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/imageCheckBox4"
                    android:layout_width="80dp"
                    android:layout_height="106.6dp"
                    android:src="@drawable/example2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBox4"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/imageCheckBox5"
                    android:layout_width="80dp"
                    android:layout_height="106.6dp"
                    android:src="@drawable/example2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBox5"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/imageCheckBox6"
                    android:background="#FFFFFF"
                    android:layout_width="80dp"
                    android:layout_height="106.6dp"
                    android:src="@drawable/example2" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkBox6"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            style="@style/AbleButton"
            android:id="@+id/btnConfirm"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/SimpleButton"
            android:text="@string/skip"
            android:id="@+id/btnSkip"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>