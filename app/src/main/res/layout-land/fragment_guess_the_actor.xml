<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.restfulrobot.moviefan.game_activities.GuessTheActorFragment"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:elevation="0dp">

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:weightSum="10"
                android:layout_gravity="center"
                android:id="@+id/linearLayoutId">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/imageActor"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="#000000"
                    android:padding="2dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/example2" />

            </LinearLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:id="@+id/relativeActorLayout">

                <GridLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="40dp"
                    android:rowCount="4"
                    android:columnCount="1"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Variant 1"
                        style="@style/AbleButton"
                        android:id="@+id/btnVar1"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Variant 2"
                        style="@style/AbleButton"
                        android:id="@+id/btnVar2"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Variant 3"
                        style="@style/AbleButton"
                        android:id="@+id/btnVar3"
                        android:layout_gravity="center_horizontal" />

                </GridLayout>



            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_weight="20"
            style="@style/SimpleButton"
            android:text="@string/skip"
            android:layout_marginTop="10dp"
            android:id="@+id/btnSkip"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>